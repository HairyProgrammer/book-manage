.container {  
  padding: 20px;  
}  
  
.form-item {  
  margin-bottom: 15px;  
}  
  
.form-item label {  
  display: block;  
  margin-bottom: 5px;  
}  
  
.form-item input,  
.form-item picker {  
  width: 100%;  
  padding: 8px;  
  box-sizing: border-box;  
}  
  
.picker {  
  background-color: #fff;  
  border: 1px solid #ccc;  
  border-radius: 4px;  
  cursor: pointer;  
  padding: 8px;  
}